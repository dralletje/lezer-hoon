  Ketlus { rune_ket<"^&", "&"> 1args<hoon> } |
  Ketsig { rune_ket<"^~", "~"> 1args<hoon> } |
  Kettar { rune_ket<"^*", "*"> 1args<spec> } |
  Kettis { rune_ket<"^=", "="> 2args<skin, hoon> } |  
