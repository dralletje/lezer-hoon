3_hoon_runes[@name] {
  (
    rune_cen<"%+", "+"> |

    [@name="%~",group="rune",@dynamicPrecedence=1] {
      @extend<Term, "%~">
    } | 
    // rune_cen<"%~", "~"> |
    
    // rune_col<":*", "*"> |
    rune_sig<"~?", "?"> |
    rune_tis<"=.", "."> |
    rune_tis<"=;", ";"> |
    rune_tis<"=/", "/"> |
    rune_tis<"=*", "*"> |
    rune_wut<"?:", ":"> |
    rune_wut<"?.", "."> |
    rune_wut<"?^", "^"> |
    rune_wut<"?@", "@"> |
    rune_wut<"?~", "~"> |
    rune_col<":+", "+">
  )
  3args<hoon, hoon, hoon>
}
4_hoon_runes[@name] {
