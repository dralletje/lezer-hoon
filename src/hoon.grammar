1_hoon_runes[@name] {
  (
    rune_bar<"|.", "."> |
    rune_bar<"|-", "-"> |
    rune_bar<"|?", "?"> |
    rune_buc<"$_", "_"> |
    // Saw this rune used in arvo.hoon, and though I can't
    // find it anywhere, Bucmic no n'existe pas!
    // (Dojo parses it only inside `spec`)
    rune_buc<"$;", ";"> |
    rune_dot<".+", "+"> |
    rune_dot<".?", "?"> |
    rune_ket<"^|", "|"> |
    rune_ket<"^:", ":"> |
    rune_ket<"^&", "&"> |
    rune_ket<"^~", "~"> |
    rune_ket<"^*", "*"> |
    rune_ket<"^?", "?"> |
    rune_mic<";/", "/"> |
    rune_sig<"~+", "+"> |
    rune_wut<"?!", "!"> |
    rune_zap<"!>", ">"> |
    rune_zap<"!=", "="> |
    rune_zap<"!:", ":"> |
    rune_zap<"!.", ".">
  )
  1args<hoon>
}
